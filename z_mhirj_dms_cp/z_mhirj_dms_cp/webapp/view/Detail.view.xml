<mvc:View
    controllerName="com.mhirj.dms.zmhirjdmscp.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
	xmlns="sap.m"
	xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
  <uxap:ObjectPageLayout id="ObjectPageLayout" 	headerContentPinnable="true">
     <uxap:headerTitle>
     <uxap:ObjectPageDynamicHeaderTitle>
				<uxap:heading>
					<Label text="{LocalDataModel>/DMS_Model/BookMarkString}" />
				</uxap:heading>
                <uxap:navigationActions>
					<OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" id="enterFullScreenBtn" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" id="exitFullScreenBtn" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close middle column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
				</uxap:navigationActions>
    </uxap:ObjectPageDynamicHeaderTitle>
     </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox direction="Column" >
							<!-- <Label text="{LocalDataModel>/DMS_Model/SelectedTreeModel/DocumentTypeName}" design ="Bold" /> -->
                            <Title text="{LocalDataModel>/DMS_Model/SelectedTreeModel/DocumentTypeName}" />
                            
						    <!-- <Label text="{i18n>maintProgram}" design="Bold"/> -->
							 <ComboBox id="idBPCombobox" visible="false" showSecondaryValues="true" class="sapUiTinyMarginTopBottom"
                                selectionChange="handleBPComboboxChangeEvent" selectedKey="{LocalDataModel>/DMS_Model/BPData/0/BusinessPartner}" 
                                items="{path: 'LocalDataModel>/DMS_Model/BPData/',sorter: { path: 'BusinessPartnerFullName' }}">
								<core:ListItem key="{LocalDataModel>BusinessPartner}" text="{LocalDataModel>BusinessPartnerFullName}" additionalText="{LocalDataModel>BusinessPartner}" />
							</ComboBox>
		    <FlexBox id="idFlexBoxFilters" class="sapUiSmallMarginTop" /></FlexBox>
        </uxap:headerContent>
        <uxap:sections>
						<uxap:ObjectPageSection>
							<uxap:subSections>
								<!-- <uxap:ObjectPageSubSection title="Test Detail Page" showTitle="false"> -->
								<uxap:ObjectPageSubSection >
									<uxap:blocks>
										 <FlexBox direction="Column"> 
                                            <Table id="idDMSTable"  autoPopinMode="true" contextualWidth="Auto" showNoData="false" items="{path: 'DmsTableModel>/'}" growing="true" growingThreshold="4" updateStarted="onMoreDataLoad" growingScrollToLoad="true">
											<!-- <Table id="idDMSTable" width="auto" showNoData="false" items="{path: 'LocalDataModel>/DMS_Model/DocSearch'}" growing="true" growingThreshold="10" growingScrollToLoad="true"> -->
                                            <!-- <Table id="idDMSTable" width="auto" showNoData="false" items="{}" growing="true" growingThreshold="10" growingScrollToLoad="true"> -->
												<headerToolbar>
													<Toolbar>
														<Title id="idDMSTableTitle"  />
														<ToolbarSpacer />
													</Toolbar>
												</headerToolbar>
												<columns>
                                                    <Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableImageThumbnail}">
														<Text text="{i18n>tableImageThumbnail}" />
													</Column>
													<Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableIssuedDate}" >
                                    					<Text text="{i18n>tableIssuedDate}" />
													</Column>
													<Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableDocNumber}">
														<Text text="{i18n>tableDocNumber}" />
													</Column>
                                                    <Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableRev}">
														<Text text="{i18n>tableRev}" />
													</Column>
													<Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableTitle}">
														<Text text="{i18n>tableTitle}" />
													</Column>
                                                    <Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableWorkingGroup}">
														<Text text="{i18n>tableWorkingGroup}" />
													</Column>
                                                    <Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableTRevisionNo}">
														<Text text="{i18n>tableTRevisionNo}" />
													</Column>
													<Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableMainAta}">
														<Text text="{i18n>tableMainAta}" />
													</Column>

                                                    <!-- <Column visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableVersion}">
														<Text text="{i18n>tableVersion}" />
													</Column> -->
												</columns>
												<items>
													<ColumnListItem type="Navigation" press="handleTableItemPress">
														<cells>
                                                            <Label text="{DmsTableModel>ImageThumbnail}" tooltip="{DmsTableModel>ImageThumbnail}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableImageThumbnail}"/>                                             
															<Label text="{DmsTableModel>ReleaseDate}" tooltip="{DmsTableModel>ReleaseDate}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableIssuedDate}"/>
															<Label text="{DmsTableModel>DocNumber}"  tooltip="{DmsTableModel>DocNumber}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableDocNumber}"/>
															<Label text="{DmsTableModel>RevisionNumber}" tooltip="{DmsTableModel>RevisionNumber}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableRev}"/>  
                                                            <Label text="{DmsTableModel>DocSetTitle}" wrapping="true" tooltip="{DmsTableModel>DocSetTitle}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableTitle}"/>
															<Label text="{DmsTableModel>WorkingGroup}" tooltip="{DmsTableModel>WorkingGroup}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableWorkingGroup}"/>                                             
                                                            <Label text="{DmsTableModel>TRevisionNumber}" tooltip="{DmsTableModel>TRevisionNumber}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableTRevisionNo}"/>
                                                            <Label text="{DmsTableModel>MainAta}" wrapping="true" tooltip="{DmsTableModel>MainAta}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableMainAta}"/>
									                                          
                                                            <!-- <Label text="{LocalDataModel>RevisionNumber}" tooltip="{LocalDataModel>RevisionNumber}" visible="{LocalDataModel>/DMS_Model/Table_Visible_Columns/tableRev}"/>                                                                                         -->
														</cells>
													</ColumnListItem>
												</items>
											</Table>
										 </FlexBox>
									</uxap:blocks>
								</uxap:ObjectPageSubSection >
							</uxap:subSections>
						</uxap:ObjectPageSection>
					</uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>